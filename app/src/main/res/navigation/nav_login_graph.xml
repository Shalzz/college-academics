<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_login_graph"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.shalzz.attendance.ui.login.LoginFragment"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_OTPFragment"
            app:destination="@id/OTPFragment" app:launchSingleTop="true"/>
    </fragment>
    <fragment
        android:id="@+id/OTPFragment"
        android:name="com.shalzz.attendance.ui.login.OTPFragment"
        tools:layout="@layout/fragment_otp" >
        <argument android:name="phone" app:argType="string"/>
        <argument android:name="sender" app:argType="string"/>
    </fragment>
</navigation>