<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="HSAppBaseTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <!-- Primary color -->
    <color name="hs_path_primaryColor">#E33124</color>

    <!-- Background color -->
    <color name="hs_path_background_color">#F5F0EC</color>

    <!-- Header background and text color -->
    <color name="hs_path_header_background_color">#0000</color>
    <color name="hs_path_header_textColor">#000</color>

    <!-- Child background and text color -->
    <color name="hs_path_child_background_color">#ffffff</color>
    <color name="hs_path_child_textColor">#000</color>

    <!-- List view color properties -->
    <color name="hs_path_listView_backgroundcolor">#0000</color>
    <color name="hs_path_listView_divider_color">#0000</color>
    <color name="hs_path_listView_selector_color">#e1e1e1</color>

    <!-- Issue details - left chat background and text color -->
    <color name="hs_path_leftChatBubbleColor">#ffffff</color>
    <color name="hs_path_leftchat_messageTextColor">#929292</color>

    <!-- Issue details - right chat background and text color -->
    <color name="hs_path_rightChatBubbleColor">#E33124</color>
    <color name="hs_path_rightchat_messageTextColor">#ffffff</color>

    <!-- Issue details - sender name/time text color -->
    <color name="hs_path_moreinfo_Textcolor">#929292</color>

    <!-- Button text color (Report issue button) -->
    <color name="hs_path_buttonTextcolor">#DE2527</color>

    <!-- Edit text color -->
    <color name="hs_path_editTextcolor">#000000</color>

    <!-- Style for background of all screens -->
    <style name="hs_backgroundStyle" parent="hs_background_defaultStyle">
        <item name="android:background">@color/hs_path_background_color</item>
    </style>

    <!-- Articles and issues list -->
    <style name="hs_listViewStyle" parent="hs_listView_defaultStyle">
        <item name="android:background">@color/hs_path_listView_backgroundcolor</item>
        <item name="android:dividerHeight">0dip</item>
    </style>

    <!-- Header background of main list view -->
    <style name="hs_listView_headerBackgroundStyle" parent="hs_listView_headerBackground_defaultStyle">
        <item name="android:background">@color/hs_path_header_background_color</item>
    </style>

    <!-- Child view background of main list view -->
    <style name="hs_listView_childBackgroundStyle" parent="hs_listView_childBackground_defaultStyle">
        <item name="android:background">@color/hs_path_child_background_color</item>
    </style>

    <style name="hs_button_defaultStyle">
        <item name="android:background">@color/hs_button_background_color</item>
        <item name="android:textColor">@color/hs_buttonTextcolor</item>
        <item name="android:layout_marginTop">@dimen/hs_button_marginSize</item>
        <item name="android:textSize">@dimen/hs_button_textSize</item>
    </style>

    <!-- ListView header text -->
    <style name="hs_listView_headerTextStyle" parent="hs_listView_headerText_defaultStyle">
        <item name="android:textColor">@color/hs_path_header_textColor</item>
    </style>

    <!-- ListView child text -->
    <style name="hs_listView_childTextStyle" parent="hs_listView_childText_defaultStyle">
        <item name="android:textColor">@color/hs_path_child_textColor</item>
    </style>

    <!-- Chat screen - left chat bubble color -->
    <color name="hs_leftchat_bubblecolor">@color/hs_path_leftChatBubbleColor</color>

    <!-- Chat screen - right chat bubble color -->
    <color name="hs_rightchat_bubblecolor">@color/hs_path_rightChatBubbleColor</color>

    <!-- Chat screen message text style for right chat bubble -->
    <style name="hs_right_messageTextStyle" parent="@style/hs_rightmessageText_defaultStyle">
        <item name="android:textColor">@color/hs_path_rightchat_messageTextColor</item>
    </style>

    <!-- Chat screen message text style for left chat bubble -->
    <style name="hs_left_messageTextStyle" parent="@style/hs_leftmessageText_defaultStyle">
        <item name="android:textColor">@color/hs_path_leftchat_messageTextColor</item>
    </style>

    <!-- Chat screen more info text style - applied to the sender name and time -->
    <style name="hs_smallTextStyle" parent="@style/hs_smallText_defaultStyle">
        <item name="android:textColor">@color/hs_path_moreinfo_Textcolor</item>
    </style>

    <!-- DRAWABLES
    Defining the drawable icons used in the project, override the drawable to give your own custom icons -->

    <!-- Add attachment icon used in issue detail screen - add reply -->
    <drawable name="hs_add_attachment">@drawable/hs_add_attachment_img</drawable>

</resources>