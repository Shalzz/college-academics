CREATE TABLE absent (
    subject_id INTEGER AS Integer NOT NULL,
    absent_date TEXT AS java.util.Date NOT NULL,
    UNIQUE(subject_id, absent_date),
    FOREIGN KEY (subject_id) REFERENCES subject(id) ON DELETE CASCADE
);

selectById:
SELECT *
FROM absent
WHERE subject_id = ? ;

selectAbsentSubjects:
SELECT *
FROM absent
WHERE absent_date = ?;

insertAbsentDate:
INSERT OR REPLACE
INTO absent(subject_id, absent_date)
VALUES (?, ?);