CREATE TABLE subject (
    id INTEGER AS Integer PRIMARY KEY NOT NULL,
    name TEXT NOT NULL,
    attended REAL AS java.lang.Float NOT NULL,
    held REAL AS java.lang.Float NOT NULL,
    absent_dates TEXT AS java.util.List<java.util.Date>
);

select_like_name:
SELECT *
FROM subject
WHERE name LIKE ? ;

select_count:
SELECT count(*)
FROM subject;

select_total:
SELECT sum(attended), sum(held)
FROM subject;